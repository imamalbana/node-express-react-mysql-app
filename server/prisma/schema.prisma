generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int           @id @default(autoincrement())
  username  String        @unique
  password  String
  role      Role          @default(USER)
  createdAt DateTime      @default(now())

  // Relasi one-to-one dengan UsersProfile
  profile   UsersProfile? 
}

model UsersProfile {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  fullName  String?
  email     String? @unique
  address   String?
  phone     String?

  // Relasi back ke User dengan cascade delete
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
